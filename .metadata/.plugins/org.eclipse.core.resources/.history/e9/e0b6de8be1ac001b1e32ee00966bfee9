package decisao;

import javax.swing.JOptionPane;

public class DecisaoSimples {

	public static void main(String[] args) {
		String disciplina = JOptionPane.showInputDialog("Disciplina");
		byte primeiraNota = Byte.parseByte(JOptionPane.showInputDialog("Primeira nota"));
		byte segundaNota = Byte.parseByte(JOptionPane.showInputDialog("Segunda nota"));
		double media = (primeiraNota + segundaNota)/2;
		System.out.println("Média:" + media);
		
		
	}
}
