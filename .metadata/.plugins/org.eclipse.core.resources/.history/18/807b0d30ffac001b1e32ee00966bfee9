package decisao;

import javax.swing.JOptionPane;

public class Lista2Exercicio3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Integer numero1 = Integer.parseInt(JOptionPane.showInputDialog("Número 1:"));
		Integer numero2 = Integer.parseInt(JOptionPane.showInputDialog("Número 2:"));
		String sinal = JOptionPane.showInputDialog("Digite o sinal de operação:/n(+) Adição");
		
		float resultado = 0;
		
		if (sinal == "+") {
			resultado = numero1 + numero2;
		}
		else if (sinal == "-") {
			resultado = numero1 - numero2;
			
		}
		else if (sinal == "/") {
			resultado = numero1 / numero2;
		}
		else {
			resultado = numero1 * numero2;
		}
			
		System.out.println("Resultado ->" + resultado);
		
	}

}
